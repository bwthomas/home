[mergetool]
  keepBackup = true
[color]
  ui = true
[color "branch"]
  current = yellow black
  local = yellow
  remote = magenta
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green
  whitespace = white reverse
[color "status"]
  branch = green
[alias]
  hist = log --pretty=format:\"%Cgreen%h%Creset %Cblue%ad%Creset %C(magenta)%an%Creset%C(yellow)%d%Creset%n        %s\" --graph --date=local
  co   = checkout
  d    = diff --patience --color-words --ignore-space-change
  s    = show --patience --color-words --ignore-space-change
  root = !pwd
[core]
  excludesfile="~/.gitignore"
  pager = "less -F"
  editor = vim -f
[push]
  default = matching
